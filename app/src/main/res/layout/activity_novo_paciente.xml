<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.NovoPacienteActivity">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <EditText
            android:id="@+id/editNomePaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:padding="16dp" />

        <EditText
            android:id="@+id/editCpfPaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:hint="Cpf"
            android:inputType="number"
            android:padding="16dp" />

        <TextView
            android:id="@+id/textViewDataNascimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:hint="Data de Nascimento"
            android:padding="16dp" />

        <Spinner
            android:id="@+id/spinnerTipoTransplantePaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:background="@drawable/bg_edit_text"
            android:ems="10"
            android:padding="16dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtAutenticacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            android:text=" Dados de Autenticação"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editEmailPaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/bg_edit_text"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="5dp"
            android:hint="E-mail"
            android:inputType="text"
            android:padding="8dp" />

        <EditText
            android:id="@+id/editSenhaPaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:background="@drawable/bg_edit_text"
            android:drawableLeft="@drawable/ic_https_black_24dp"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Nova senha"
            android:inputType="textPassword"
            android:padding="8dp" />

        <EditText
            android:id="@+id/editRepitaSenhaPaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:background="@drawable/bg_edit_text"
            android:drawableLeft="@drawable/ic_https_black_24dp"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Repita a senha"
            android:inputType="textPassword"
            android:padding="8dp" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnCadastrarPaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Cadastrar"
            android:theme="@style/botaoPadrao"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
    </LinearLayout>