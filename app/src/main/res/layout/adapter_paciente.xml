<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/textNomePacienteLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Renan da Silva Alves"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textIDataNascimentoPaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="16 Anos" />

        <TextView
            android:id="@+id/textTipoTransplantePacienteLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Transplante de Rim"
            android:textColor="@android:color/holo_blue_dark" />
    </LinearLayout>
</android.support.v7.widget.CardView>